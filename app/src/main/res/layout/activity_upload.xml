<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ABDCF8CA"
    android:backgroundTint="#ABDCF8CA"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="20dp"
        android:background="@color/navigation"
        android:id="@+id/relativeView">

        <ImageView
            android:layout_width="311dp"
            android:layout_height="40dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo_black" />

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:id="@+id/username1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="195dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/internet"
            android:gravity="end"
            android:text="Ali"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/internet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:text=""
            android:textSize="20sp"
            android:background="@drawable/circle"
            android:src="@drawable/mango"/>

    </RelativeLayout>

    <Button
        android:id="@+id/pick"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="144dp"
        android:layout_marginTop="91dp"

        android:layout_marginEnd="120dp"
        android:background="@drawable/lightborder"
        android:backgroundTint="#E1E1E1"
        android:drawableLeft="@drawable/ic_baseline_file_upload_24"
        android:text="Upload"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/totalPhotos1"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="122dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalPhotos"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerVeiw_Gallery_Images"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="151dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVeiw_Gallery_Images"
        android:layout_width="411dp"
        android:layout_height="308dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="212dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/button3"
        android:layout_width="191dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/lightborder"
        android:backgroundTint="#E1E1E1"
        android:drawableLeft="@drawable/ic_baseline_check_box_24"
        android:text="Predict"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button6"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="125dp"
        android:text="Select mango Specied" />


</RelativeLayout>