<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABDCF8CA"
    android:backgroundTint="#ABDCF8CA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pick"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="144dp"
        android:layout_marginTop="68dp"

        android:layout_marginEnd="120dp"
        android:background="@drawable/lightborder"
        android:backgroundTint="#E1E1E1"
        android:drawableLeft="@drawable/ic_baseline_file_upload_24"
        android:text="Upload"
        android:textColor="@color/black"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/totalPhotos1"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="151dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="122dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/totalPhotos"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerVeiw_Gallery_Images"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="151dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVeiw_Gallery_Images"
        android:layout_width="411dp"
        android:layout_height="308dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="233dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/button3"
        android:layout_width="191dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/lightborder"
        android:backgroundTint="#E1E1E1"
        android:drawableLeft="@drawable/ic_baseline_check_box_24"
        android:text="Predict"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button6"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="121dp"
        android:text="Select mango Specied" />


</RelativeLayout>